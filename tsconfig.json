{
  "compilerOptions": {
    "outDir": "build",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2021",

    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "paths": { "*": ["./frontend/*", "./frontend/js/*"] },
    "skipLibCheck": true,
    "strict": true,
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": ["./frontend/**/*.ts", "./frontend/**/*.tsx"],
  "exclude": ["node_modules", "build", "frontend/**/*.js", "frontend/**/*.jsx"]
}
